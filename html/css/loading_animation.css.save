/*Animazione caricamento*/
.spinner {
  z-index: 1;
  position: absolute;
  width: 40px;
  height: 40px;
  background-color: #333;
  margin: 50%;

  -webkit-animation: mymove 4s infinite linear;
  animation: mymove 4s infinite linear;
}

@-webkit-keyframes mymove {
    0%{
romr        transform: perspective(120px) rotateX(0deg) rotateY(0deg) rotateZ(0deg) scale(1); left:-40px; top:-40px;
    }
    25%{
        transform: perspective(120px) rotateX(0deg) rotateY(180deg) rotateZ(0deg) scale(1); left:0px; top:-40px;
    }
    50%{
        transform: perspective(120px) rotateX(-180deg) rotateY(180deg) rotateZ(0deg) scale(1); left:0px; top:0px;
    }
    75%{
        transform: perspective(120px) rotateX(-180deg) rotateY(360deg) rotateZ(0deg) scale(1); left:-40px; top:0px;
    }
    100%{
        transform: perspective(120px) rotateX(0deg) rotateY(360deg) rotateZ(0deg) scale(1); left:-40px; top:-40px;
    }

}

@keyframes mymove {
    0%{
        transform: perspective(120px) rotateX(0deg) rotateY(0deg) rotateZ(0deg) scale(1); left:-40px; top:-40px;
    }
    25%{
        transform: perspective(120px) rotateX(0deg) rotateY(180deg) rotateZ(0deg) scale(1); left:0px; top:-40px;
    }
    50%{
        transform: perspective(120px) rotateX(-180deg) rotateY(180deg) rotateZ(0deg) scale(1); left:0px; top:0px;
    }
    75%{
        transform: perspective(120px) rotateX(-180deg) rotateY(360deg) rotateZ(0deg) scale(1); left:-40px; top:0px;
    }
    100%{
        transform: perspective(120px) rotateX(0deg) rotateY(360deg) rotateZ(0deg) scale(1); left:-40px; top:-40px;
    }
}
